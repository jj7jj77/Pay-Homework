        System.out.print("How many hours did you work this week?");
        int hoursWorked = imp.nextInt();
        
        if (skill==1)
        {
            payRate = 17;
        }
        else if (skill==2)
        {
            payRate =20;
        }
        else if (skill==3)
        {
            payRate =22;
        }
        
           double wages = payrate * hoursWorked;
           double regularPay = payrate * 40;
           double overtimePay = payrate * (hoursWorked - 40); 
        if hoursWorked<=40
        {
            double overtimePay = 0;
        }
        //String medicalInsurance;
        double medical = 32.50;
        //String dentalInsurance; 
        double dental = 20.00;
        //String disabilityInsurance;
        double disability = 10.00;
       
