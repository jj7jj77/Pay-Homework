package JavaClassHomework2;
import java.util.Scanner;
public class Pay 
{
    public static void main(String[] args)
     {    
        int payRate =0;
        Scanner imp = new Scanner(System.in); 
        System.out.print("What is your skill level?");
        int skill = imp.nextInt();
        
        System.out.print("How many hours did you work this week?");
        int hoursWorked = imp.nextInt();
        
        if (skill==1)
        {
            payRate = 17;
        }
        else if (skill==2)
        {
            payRate =20;
        }
        else if (skill==3)
        {
            payRate =22;
        }
        
        int wages = (payRate * hoursWorked);
        int regularPay = (payRate * 40);
        int overtimeHours = (hoursWorked - 40);
        int overtimePay = (payRate * overtimeHours);
           
        if (hoursWorked <= 40)
        {
            overtimePay = 0;
        }

        double totalPay =(regularPay+ overtimePay);
        
        
        double medical = 32.50;
        double dental = 20.00;
        double disability = 10.00;
        double totalDeductions = medical + dental + disability;
        
        System.out.print("Choose an insurance");
        int choice = imp.nextInt();
        
        System.out.print("Want medical insurance?");
        int m = imp.nextInt();

        System.out.print("Want dental insurance?");
        int d = imp.nextInt();
        
        System.out.print("Want disability insurance?");
        int db = imp.nextInt();
        
        switch(choice)
        {
            case 1: System.out.print("You want medical insurance? 0 for no, 1 for yes");
        if (m ==1)
        {
           System.out.println("yes");
        }
        else
        {
            System.out.println("no");
        }
        break;
            case 2: System.out.print("You want dental insurance? 0 for no, 1 for yes");
        if (d ==1)
        {
           System.out.println("yes");
        }
        else
        {
            System.out.println("no");
        }
        break;
            case 3: System.out.print("You want disability insurance? 0 for no, 1 for yes");
        if (db ==1)
        {
           System.out.println("yes");
        }
        else
        {
            System.out.println("no");
        }
        break;
        }
       

        
        //if (skill==2 ||skill==3)
       

       
       System.out.println("You have a skill level of " + skill + " you worked " + hoursWorked + " hours this week");
       System.out.println("Your pay rate is" + payRate + " per hour, your regular pay is " + regularPay + " for 40 Hours");
       System.out.println("Your overtimepay is " + overtimePay);
       System.out.println("Your totalPay is " + totalPay);
       System.out.println("Your total deductions are $" + totalDeductions);
      }
     }
